<Window x:Class="KianLindskou.WpfControls.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KianLindskou.WpfControls.GUI"
        xmlns:uc="clr-namespace:KianLindskou.WpfControls.GUI.UserControls"
        mc:Ignorable="d"
        Title="Film"
        Height="800"
        Width="1100"
        ResizeMode="NoResize">
   <Grid Background="AliceBlue">
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="400" />
         <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="1*" />
         <RowDefinition Height="700" />
      </Grid.RowDefinitions>
      <!--#region Labels-->
      <Label Grid.Row="0"
             Grid.Column="0"
             Margin="10, 10"
             Content="Ny film"
             FontSize="24" />
      <Label Grid.Row="0"
             Grid.Column="1"
             Margin="10, 10"
             Content="Alle film"
             FontSize="24" />
      <!--#endregion-->
      <!--#region Controls-->
      <uc:NewMovieView Grid.Row="1"
                       Grid.Column="0" />
      <uc:AllMoviesView Grid.Row="1"
                        Grid.Column="2" />
      <!--#endregion-->
   </Grid>
</Window>
